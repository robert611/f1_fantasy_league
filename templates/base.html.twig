<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>F1 Fantasy League</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">

    {% block stylesheets %}
        <link rel="stylesheet" href="../assets/css/styles.css">
    {% endblock %}
    <script src="https://kit.fontawesome.com/b93a30c2a7.js" crossorigin="anonymous"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <span class="navbar-brand mb-0 ms-3 ms-sm-0 h1"><a href="/" class="text-decoration-none text-white">F1 Fantasy League</a></span>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-3">
        
                </ul>

                <ul class="navbar-nav my-2 ms-3 ms-sm-0 my-lg-0">
                    {% if session.get('user') is same as(null) %}
                        <li class="nav-item"><a class="nav-link text-white" href="/login">Login </a></li>
                        <li class="nav-item"><a class="nav-link text-white" href="/register">Register</a></li>
                    {% else %}
                        {% if session.get('user').hasRole('ROLE_ADMIN') %}
                            <li class="nav-item"><a class="nav-link text-white" href="/admin">Admin Panel</a></li>
                        {% endif %}
                        <li class="nav-item"><a class="nav-link text-white" href="/fantasy/league/results">Results</a></li>
                        <li class="nav-item"><a class="nav-link text-white" href="/logout">Logout</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    {% block flashMessages %}
        <div class="container mt-3">
            {% for message in session.getFlashBag().get('success') %}
                <div class="alert alert-success mt-2">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in session.getFlashBag().get('error') %}
                <div class="alert alert-danger mt-2">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
    {% endblock %}

    {% block body %}
    
    {% endblock %}

    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    {% endblock %}

</body>
</html>